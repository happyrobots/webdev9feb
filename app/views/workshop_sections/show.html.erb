<p id="notice"><%= notice %></p>

<%= previous_index_next @workshop_section %>
<% if user_is_committee %> |
<%= link_to 'Edit', edit_workshop_section_path(@workshop_section) %>
<% end %>

<p style="font-size:200%;"><%= @workshop_section.title %></p>

<p><%= markdown @workshop_section.description %></p>

<% unless @workshop_section.external_links.nil? or @workshop_section.external_links.empty? %>
<p><b>External links:</b></p>
<ul>
  <% @workshop_section.external_links.split.each do |l| %>
  <li><%= link_to l, l, :target => "_blank" %></li>
  <% end %>
</ul>
<% end %>

<br/><br/>

